<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.sxl.entity.Order" table="t_order">
        <id name="oid" column="oid">
            <generator class="native"/>
        </id>
        <property name="orderName" column="order_name"/>
        <property name="addTime" column="add_time"/>
        <property name="total" column="order_total"/>

        <set name="freeSet" table="order_free" cascade="save-update">
            <key column="order_id"/>
            <many-to-many class="com.sxl.entity.Free" column="free_id"/>
        </set>
    </class>
</hibernate-mapping>